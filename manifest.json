{
  "name": "Bitly Button",
  "version": "1.0",
  "description": "A Button for Bitly!",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html" 
  },
  "permissions": [
    "tabs",
    "clipboard",
    "clipboardRead",
    "clipboardWrite",
    "activeTab",
    "https://bitly.com/oauth/authorize?*",
    "https://api-ssl.bitly.com/oauth/access_token?*",
    "identity"
 ]  
}